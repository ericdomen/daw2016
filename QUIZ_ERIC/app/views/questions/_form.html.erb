<%= form_for(@question) do |f| %>
<% if @question.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@question.errors.count, 'error') %>
    prohibited this question from beign saved:
  </h2>
  <ul>
    <% @question.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
        <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <div class="container">
    <div class="form-group">
      <label class="control-label col-sm-1"><%= f.label :text%></label>
    </div>
    <div class="col-sm-11">
      <%= f.text_area :text, :size => '50x3', class: 'form-control' %>
    </div>
  </div>
</div>
<div class="actions">
  <%= f.submit class: 'btn btn-success' %>
</div>
<% end %>