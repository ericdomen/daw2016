<h1>Question <%= @current + 1 %> of <%= @total %></h1>
<p id="question">
  <%= @question[:text] %>
</p>
<div id="feedback-choices">
  <% @choices.each do |choice| %>

      <%if(choice[:correct])%>
      <p class="correct feedback-choice">
        <%elsif choice == @choice%>
      <p class="incorrect feedback-choice">
          <% else %>
      <p class="feedback-choice">
          <% end %>
      <%= choice[:text] %>
      </p>
      <% end %>
  </div>
<p class="feedback">
  <% if @correct%>
      <i class="fa fa-check-circle text-success fa-3x" aria-hidden="true">correct!</i>
  <% else %>
      <i class="fa fa-times-circle text-danger fa-3x" aria-hidden="true">Incorrect!</i>
  <% end %>
</p>

<%= form_tag({:controller => 'quiz', :action => 'question'}) do %>
    <div class="center">
      <%= submit_tag('Continue', :class => 'submit', class: 'btn btn-success') %>
      </div>
    <% end %>
<% content_for(:title) do%>
    Question <%= @current + 1 %> of <%= @total %>
    <%end%>
