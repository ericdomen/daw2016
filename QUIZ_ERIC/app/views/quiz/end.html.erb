<h1>Quiz Results</h1>
<p id="question">You answered correctly <%= @correct %> out of <%= @total %> questions.</p>
<div class="progress">
  <div class="progress-bar progress-bar-striped active" role="progressbar"
       aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:<%= @score %>%">
    <%= @score %> %
  </div>
</div>
<%= form_tag({:controller => 'quiz', :action => 'index'}, :method => 'get') do %>
<div class="center">
  <%= submit_tag('Take another quiz', :class => 'submit', class: 'btn btn-default') %>
</div>
<% end %>
<% content_for(:title) do %>
Quiz Results
<% end %>