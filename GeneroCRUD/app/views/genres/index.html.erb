<p id="notice"><%= notice %></p>

<h1>Listing Genres</h1>

<table border="1">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= genre.description %></td>
        <td><%= link_to 'Show', genre, class: 'button round' %></td>
        <td><%= link_to 'Edit', edit_genre_path(genre), class: 'button round warning' %></td>
        <td><%= link_to 'Destroy', genre, class: 'button round alert', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Genre', new_genre_path, class: 'button round success' %>
