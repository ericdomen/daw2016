<h1>Lista</h1>
<%= link_to 'Nuevo Estado', new_estado_path, class: 'secondary hollow button round' %>
<table>
  <tr>
    <th>Nombre</th>
    <th>Pais</th>
    <th colspan="3">Acciones</th>
  </tr>
  <% @estados.each do |estado| %>
    <tr align="center">
      <td><%= estado.nombre %></td>
      <td><%= estado.pais %></td>
      <td><%= link_to 'Mostrar', estado, class: 'success hollow button round' %></td>
      <td><%= link_to 'Editar', edit_estado_path(estado), class: 'warning hollow button round' %></td>
      <td><%= link_to 'Eliminar', estado, method: :delete, data: { confirm: 'Estas seguro?' }, class: 'alert hollow button round' %></td>
    </tr>
  <% end %>
</table>

<a href="#" data-reveal-id="myModal">Click Me For A Modal</a>

<div id="myModal" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
  <h2 id="modalTitle">Awesome. I have it.</h2>
  <p class="lead">Your couch.  It is mine.</p>
  <p>I'm a cool paragraph that lives inside of an even cooler modal. Wins!</p>
  <a class="close-reveal-modal" aria-label="Close">&#215;</a>
</div>