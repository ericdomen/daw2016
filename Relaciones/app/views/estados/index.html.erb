<h1>Lista</h1>
<table>
  <tr>
    <th>Nombre</th>
    <th>Pais</th>
    <th colspan="2">Acciones</th>
  </tr>
  <% @estados.each do |estado| %>
    <tr>
      <td><%= estado.nombre %></td>
      <td><%= estado.pais %></td>
      <td><%= link_to 'Mostrar', estado %></td>
      <td><%= link_to 'Editar', edit_estado_path(estado) %></td>
      <td><%= link_to 'Eliminar', estado, method: :delete, data: { confirm: 'Estas seguro?' }, class: 'button round alert' %></td>
    </tr>
  <% end %>
</table>